
#include <SFML/Graphics.hpp>
#include <iostream>
#include "interface.h"
#include "toucher.h"
#include "zone.h"
#include <vector>
#define diametre 360
#define nombrezone 5
using namespace std;
using namespace sf;

/*tableau aire de taille 360/5 x largeurecran */
/*pour calculer aire pas besoin de tableau juste besoin nombre pixels
  ds le tableau et enlever les pixels (i,j) qui sont pas ds cercle*/

int calculaire(int k,int longeur,int largeur,int a,int b,int diametre,)
{
	int i,j=0,e,aire;
	e=diametre/nombrezone;
	aire=longueur*largeur;
	
	for (i=(a+r-(k+1)*e);i<(a+r-k*e);i++)
	{	while(!zone(k,i,j,a,b,diametre/2,e) )
		{	
			j+=1;
			aire=aire-1;
		}
	}	
	return aire;
}


